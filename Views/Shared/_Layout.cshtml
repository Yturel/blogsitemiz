<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Blog sitemiz</title>
    <link rel="icon" type="image/x-icon" href="~/resim/favicon.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/" style="border-color: cornflowerblue; border-radius: 5px; margin-right: 3px;">Agnieszka ve Yunus</a>

        <!-- Hamburger Menü Butonu -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Menü İçeriği -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto">
                <li class="nav-item" style="background-color: lightcoral; border-radius: 7px; margin-right: 3px;">
                    <a class="nav-link" href="/">Anasayfa</a>
                </li>
                <li class="nav-item" style="background-color: royalblue; border-radius: 7px; margin-right: 3px;">
                    <a class="nav-link" href="/Home/Blog">Blog Sayfasıꨄ︎❤️ྀིꨄ︎</a>
                </li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item" style="background-color: darkolivegreen ; border-radius: 7px; margin-right: 3px;">
                        <a class="nav-link" href="/Home/CreateBlog">Blog Paylaş</a>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                            <button type="submit" class="btn btn-link nav-link" style="background-color:palevioletred; border-radius: 7px; margin-right: 5px;">Çıkış</button>
                        </form>
                    </li>
                    <li class="nav-item"><a class="nav-link">❤️❤️❤️❤️</a></li>

                }
                else
                {
                    <li class="nav-item" style="background-color:palevioletred; border-radius: 10px; margin-right: 3px;">
                        <a class="nav-link" href="/Identity/Account/Login">Giriş</a>
                    </li>
                }
            </ul>

            <!-- Tema butonu -->
            <button style="height: 66px;" onclick="toggleTheme()" class="btn btn-outline-dark">
                <img id="theme-icon" src="resim/kedi.png" width="34">
            </button>
        </div>
    </nav>

    <div class="d-flex">
        <!-- Sol taraftaki tekrar eden görsel -->
        <div class="sidebar-image" style="opacity: 80%"></div>
        <div class="container mt-3">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>
    <script src="~/js/themeToggle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
